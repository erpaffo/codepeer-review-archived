<h1>Edit Snippet</h1>
<%= form_with(model: @snippet, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit 'Update Snippet' %>
  </div>
<% end %>
<%= link_to 'Back', snippets_path %>
