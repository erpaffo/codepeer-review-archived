<h1>New Project</h1>

<%= form_with(model: @project, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :readme %>
    <%= form.check_box :readme %>
  </div>

  <div class="field">
    <%= form.label :files, "Files to include" %>
    <%= form.file_field :files, multiple: true %>
  </div>

  <div class="actions">
    <%= form.submit "Create Project" %>
  </div>
<% end %>
